@page
@using Microsoft.Extensions.Localization;
@model ReadLine2.Web.Pages.Categories.CreateModel
@inject IStringLocalizer<CreateModel> Localizer
@{
    ViewData["Title"] = Localizer["AddCategoryHeading"];
}



<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>@Localizer["AddCategoryHeading"]</h2>
            <hr />
        </div>
        @*To display all the validation error in one place*@
        @*<div asp-validation-summary="All"></div> *@
        <div class="mb-3">
            <label asp-for="@Model.Category.Name">@Localizer["NameLabel"]</label>
            <input asp-for="@Model.Category.Name" class="form-control"/>
            <span asp-validation-for="@Model.Category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Category.Description">@Localizer["DescriptionLabel"]</label>
            <input asp-for="@Model.Category.Description" class="form-control"/>
            <span asp-validation-for="@Model.Category.Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px;">@Localizer["AddButtonLabel"]</button>
    </div>
</form>

